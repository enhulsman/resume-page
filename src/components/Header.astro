---
import { gravatarUrl } from '../lib/gravatar';
import site from '../config/site';
const { name = site.name, role = site.role, company = site.company, location = site.location } = Astro.props;

// Employment status configuration
const employmentStatus = site.employment.status;
const employmentMessage = site.employment.message[employmentStatus as keyof typeof site.employment.message];
const employmentClass = `employment-${employmentStatus}`;
---
<header class="py-4 sm:py-6">
  <div class="card-responsive shadow-theme-sm hover:shadow-theme-lg transition-all duration-300">
    <!-- Mobile layout: single column stack -->
    <div class="flex flex-col md:grid md:grid-cols-2 md:gap-8 md:items-stretch">
      
      <!-- First section: Avatar + Name + Info -->
      <div class="flex flex-col items-start md:justify-between">
        <!-- Avatar and name section -->
        <div class="flex items-start gap-4 md:gap-6 mb-4 md:mb-4 w-full">
          <img
            src={gravatarUrl}
            onerror="this.onerror=null;this.src='/avatar.svg'"
            alt={name}
            width={200}
            height={200}
            class="avatar-theme w-20 h-20 sm:w-24 sm:h-24 md:w-28 md:h-28 lg:w-32 lg:h-32 xl:w-36 xl:h-36 rounded-full border-4 border-theme-accent/30 object-cover shrink-0"
          />
          <div class="flex-1 min-w-0">
            <h1 class="text-xl sm:text-2xl md:text-2xl lg:text-3xl xl:text-4xl font-semibold tracking-tight text-theme-primary break-words">{name}</h1>
            <p class="text-sm sm:text-base md:text-base lg:text-lg text-theme-secondary mt-1 break-words">
              {role}
              {company && site.social.employer && (
                <span class="text-theme-tertiary"> @ </span>
                <a 
                  href={site.social.employer} 
                  target="_blank" 
                  rel="noopener noreferrer"
                  class="text-theme-accent hover:text-theme-accent-hover underline decoration-dotted underline-offset-2 hover:decoration-solid transition-all duration-200"
                >
                  {company}
                </a>
              )}
            </p>
            <!-- Location - now shown on all screen sizes -->
            <p class="text-xs sm:text-sm text-theme-tertiary mt-0.5 break-words md:hidden">
              {location}
            </p>
            <!-- Quote - now shown on all screen sizes -->
            <p class="text-xs sm:text-sm text-theme-tertiary/80 mt-2 italic break-words md:hidden">
              {site.quoteUrl ? (
                <a href={site.quoteUrl} target="_blank" rel="noopener noreferrer" class="text-theme-accent hover:text-theme-accent-hover underline decoration-dotted underline-offset-2 hover:decoration-solid transition-all duration-200">
                  {site.quote}
                </a>
              ) : (
                site.quote
              )}
            </p>
            <!-- Quote on larger screens -->
            <p class="hidden md:block text-sm text-theme-tertiary/80 mt-2 italic break-words">
              {site.quoteUrl ? (
                <a href={site.quoteUrl} target="_blank" rel="noopener noreferrer" class="text-theme-accent hover:text-theme-accent-hover underline decoration-dotted underline-offset-2 hover:decoration-solid transition-all duration-200">
                  {site.quote}
                </a>
              ) : (
                site.quote
              )}
            </p>
          </div>
        </div>
        
        <!-- Location (desktop only) -->
        <div class="hidden md:flex items-center gap-2 text-sm text-theme-tertiary mb-6">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
          </svg>
          {location}
          <img 
            src="/utrecht_province_fat_outline_light.png" 
            alt="Utrecht Province" 
            class="w-5 h-5 theme-light-only"
          />
          <img 
            src="/utrecht_province_fat_outline_dark.png" 
            alt="Utrecht Province" 
            class="w-5 h-5 theme-dark-only"
          />
        </div>
        
        <!-- Professional Links (desktop only) -->
        <div class="hidden md:flex flex-col gap-3 mb-6">
          <div class="flex flex-wrap items-center gap-x-4 gap-y-2 text-sm">
            <div class="flex items-center gap-2 text-theme-tertiary">
              <a 
                href={`mailto:${site.social.email}`} 
                class="link-social flex items-center gap-2"
              >
                <svg class="w-4 h-4 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
                <span class="whitespace-nowrap">{site.social.email}</span>
              </a>
            </div>
            <a 
              href={site.social.GitHub} 
              target="_blank" 
              rel="noopener noreferrer"
              class="link-social flex items-center gap-2"
            >
              <svg class="w-4 h-4 shrink-0" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
              </svg>
              <span class="whitespace-nowrap">GitHub</span>
            </a>
            <a 
              href={site.social.LinkedIn} 
              target="_blank" 
              rel="noopener noreferrer"
              class="flex items-center gap-2 text-theme-tertiary hover:text-theme-accent transition-colors"
            >
              <svg class="w-4 h-4 shrink-0" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
              <span class="whitespace-nowrap">LinkedIn</span>
            </a>
          </div>
        </div>
        
        <!-- Employment status (desktop only) -->
        <div class={`hidden md:flex items-center gap-2 text-xs text-theme-employment mb-2 ${employmentClass}`}>
          <div class="availability-indicator w-2 h-2 rounded-full"></div>
          {employmentMessage}
        </div>
        
        <!-- CTAs - vertical on desktop, horizontal on mobile -->
        <div class="hidden md:flex flex-col gap-2 w-full">
          <a 
            href="/resume.pdf" 
            class="group inline-flex items-center justify-center px-4 py-2.5 btn-theme-accent-enhanced text-white text-sm font-medium rounded-lg transition-all duration-200"
            download
          >
            <svg class="w-4 h-4 mr-2 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
            </svg>
            Download Resume
          </a>
          <a 
            href="/contact" 
            class="group inline-flex items-center justify-center px-4 py-2.5 btn-theme-secondary text-sm font-medium rounded-lg transition-all duration-200"
          >
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
            </svg>
            Let's Chat
          </a>
        </div>
      </div>
      
      <!-- Right column: About + Skills (desktop) / Sections 2-3 (mobile) -->
      <div class="flex flex-col md:justify-between">
        <!-- About section -->
        <div class="mb-4 md:mb-6 order-2">
          <h2 class="text-sm font-medium md:font-semibold text-theme-secondary mb-2 md:mb-3">About</h2>
          <p class="text-sm md:text-base text-theme-tertiary leading-relaxed">
            {site.summary}
          </p>
        </div>
        
        <!-- Skills section -->
        <div class="mb-4 md:mb-0 order-3">
          <h2 class="text-sm font-medium md:font-semibold text-theme-secondary mb-3 md:mb-4">Skills</h2>
          <div class="space-y-3 md:space-y-4">
            <div>
              <span class="text-xs font-medium text-theme-tertiary uppercase tracking-wide block mb-1 md:mb-2">Languages</span>
              <div class="flex flex-wrap gap-1.5">
                {site.skills.languages.map((language) => (
                  <span class="skill-badge-primary">
                    {language}
                  </span>
                ))}
              </div>
            </div>
            <div>
              <span class="text-xs font-medium text-theme-tertiary uppercase tracking-wide block mb-1 md:mb-2">Tools</span>
              <div class="flex flex-wrap gap-1.5">
                {site.skills.tools.map((tool) => (
                  <span class="skill-badge-secondary">
                    {tool}
                  </span>
                ))}
              </div>
            </div>
            <div>
              <span class="text-xs font-medium text-theme-tertiary uppercase tracking-wide block mb-1 md:mb-2">Frameworks</span>
              <div class="flex flex-wrap gap-1.5">
                {site.skills.frameworks.map((framework) => (
                  <span class="skill-badge-tertiary">
                    {framework}
                  </span>
                ))}
              </div>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Fourth section: Professional Links (mobile order 4, hidden on desktop) -->
      <div class="md:hidden mb-4 order-4">
        <h2 class="text-sm font-medium text-theme-secondary mb-3">Connect</h2>
        <div class="flex flex-wrap items-center gap-x-4 gap-y-2 text-sm">
          <!-- Email (standalone item) -->
          <div class="flex items-center gap-2 text-theme-tertiary">
            <svg class="w-4 h-4 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
            </svg>
            <a href={`mailto:${site.social.email}`} class="link-social hover:text-theme-accent transition-colors break-all">
              {site.social.email}
            </a>
          </div>
          
          <!-- GitHub and LinkedIn container (will wrap together) -->
          <div class="flex items-center gap-x-4 gap-y-2 flex-wrap">
            <a 
              href={site.social.GitHub} 
              target="_blank" 
              rel="noopener noreferrer"
              class="link-social flex items-center gap-2"
            >
              <svg class="w-4 h-4 shrink-0" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
              </svg>
              <span class="whitespace-nowrap">GitHub</span>
            </a>
            <a 
              href={site.social.LinkedIn} 
              target="_blank" 
              rel="noopener noreferrer"
              class="link-social flex items-center gap-2"
            >
              <svg class="w-4 h-4 shrink-0" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
              <span class="whitespace-nowrap">LinkedIn</span>
            </a>
          </div>
        </div>
      </div>
      
      <!-- Fifth section: Mobile CTAs with availability status (mobile order 5, hidden on desktop) -->
      <div class="md:hidden order-5">
        <!-- Employment status -->
        <div class={`flex items-center gap-2 text-xs text-theme-employment mb-3 ${employmentClass}`}>
          <div class="availability-indicator w-2 h-2 rounded-full"></div>
          {employmentMessage}
        </div>
        
        <!-- CTA Buttons -->
        <div class="flex flex-wrap gap-3">
          <a 
            href="/resume.pdf" 
            class="group inline-flex items-center px-4 py-2.5 btn-theme-accent-enhanced text-white text-sm font-medium rounded-lg transition-all duration-200"
            download
          >
            <svg class="w-4 h-4 mr-2 group-hover:scale-110 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
            </svg>
            Download Resume
          </a>
          <a 
            href="/contact" 
            class="group inline-flex items-center px-4 py-2.5 btn-theme-secondary text-sm font-medium rounded-lg transition-all duration-200"
          >
            <svg class="w-4 h-4 mr-2 group-hover:scale-110 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
            </svg>
            Let's Chat
          </a>
        </div>
      </div>
    </div>
  </div>
</header>
